# API key for Google Gemini
GOOGLE_GEMINI_API_KEY=your_api_key_here

# Default model to use when not specified
GOOGLE_GEMINI_MODEL=gemini-pro

# Image resolution for generated images (possible values: 512x512, 1024x1024, 1536x1536)
GOOGLE_GEMINI_IMAGE_RESOLUTION=1024x1024

# Maximum image size in MB for uploads
GOOGLE_GEMINI_MAX_IMAGE_SIZE_MB=10

# JSON array of supported image MIME types
GOOGLE_GEMINI_SUPPORTED_IMAGE_FORMATS=["image/jpeg","image/png","image/webp"]

# Base directory for secure file operations (must be absolute path)
GEMINI_SAFE_FILE_BASE_DIR=/path/to/safe/directory
